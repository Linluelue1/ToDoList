<Window x:Class="CircularProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Circular ProgressBar" Height="350" Width="525">
    <Canvas>
        <Ellipse Width="200" Height="200" Stroke="Black" StrokeThickness="20" />
        <Path x:Name="progressPath" Stroke="Green" StrokeThickness="20" Fill="Transparent">
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry RadiusX="100" RadiusY="100" Center="100,100" />
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Canvas>
</Window>